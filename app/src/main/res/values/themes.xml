<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NamiaCosmeticsProject" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryVariant">@color/main_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

<!--    menu style -->
    <style name="navigationTheme">
<!--        color of the text and icon when selected-->
        <item name="colorPrimary">@color/second_color</item>
        
<!--        background color when selected-->
        <item name="colorControlHighlight">@color/black</item>
    </style>

<!--    material design-->

    <style name="materialRippleWhite">
        <item name="mrl_rippleOverlay" >true</item>
        <item name="mrl_rippleColor" >#fff</item>
        <item name="mrl_rippleAlpha" >0.4</item>
    </style>

    <style name="materialRippleGray">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#000000</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>
</resources>