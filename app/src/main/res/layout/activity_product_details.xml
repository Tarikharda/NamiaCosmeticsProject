<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".User.ProductDetails"
    >
<!--    -->



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/main_color"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back_black"
                    android:layout_alignParentStart="true"
                    android:padding="20dp"/>

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/slider_product_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:iss_delay="2500"
                    app:iss_period="2500"
                    app:iss_auto_cycle="true"
                    app:iss_title_background="@drawable/gradient"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <RelativeLayout
                        android:id="@+id/heart_btn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/heart_bg"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/love"
                            android:layout_centerInParent="true"
                            />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp">

                    <TextView
                        android:id="@+id/details_product_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Face"
                        android:textColor="#7A7676"
                        android:textSize="16sp"
                        android:layout_marginBottom="5dp"
                        />


                    <TextView
                        android:id="@+id/details_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloo"
                        android:text="Argan Oil"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:layout_below="@id/details_product_category"/>


                    <TextView
                        android:id="@+id/details_product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$ 40.00"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_alignTop="@id/details_product_name"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="@color/main_color"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    >

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/materialRippleWhite">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Description"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_margin="8dp"
                            android:paddingHorizontal="15dp"
                            android:paddingVertical="5dp"
                            />

                    </com.balysv.materialripple.MaterialRippleLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Argan oil is extracted from Argania Spinosa, the seeds of a tree native to Morocco. Its composition based on Vitamin A and E, antioxidants and essential fatty acids make it an active ingredient with many benefits for hair care."
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/linear_bottons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="10dp"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="5dp"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            android:background="@drawable/add_to_cart_bg"
            >

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/materialRippleWhite">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Add to Cart"
                    android:textAllCaps="false"
                    android:textColor="@color/main_color"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="5dp"
                    android:drawableStart="@drawable/ic_cart"
                    android:drawableTint="@color/main_color"
                    android:background="#00ffffff"
                    tools:targetApi="m" />
            </com.balysv.materialripple.MaterialRippleLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/main_color"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            >

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/materialRippleWhite">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buy Now"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="5dp"
                    />

            </com.balysv.materialripple.MaterialRippleLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>