<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:theme="@style/Theme.MaterialComponents"
    tools:context=".Fragments.ForgetPasswordFragments.ForgetPasswordSuccessMessageFragment">

    <ImageView
        android:id="@+id/forgetPass_success_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_black"
        android:padding="10dp"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password\nUpdated"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:layout_marginTop="-80dp"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:src="@drawable/ic_done"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your password has been updated !"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="30dp"/>

        <Button
            android:id="@+id/forgetPass_go_to_login"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textStyle="bold"
            android:background="@color/main_color"
            android:layout_gravity="center"/>

    </LinearLayout>


</LinearLayout>